---
import { Icon } from "astro-icon/components";
import SpaConfig from "../../yukina.config";
import { i18n } from "../locales/translation";
import I18nKeys from "../locales/keys";
import { GetCategories, GetTags } from "../utils/content";
import { Image } from "astro:assets";
import CopyRight from "./misc/CopyRight.astro";

const currentYear = new Date().getFullYear();
---

<footer>
  <div class="main-container">
    <div class="user-info">
      <div class="avatar">
        <Image
          class="avatar-img"
          width={400}
          height={400}
          format="webp"
          src={SpaConfig.avatarUrl}
          alt="Avatar Image"
        />
      </div>
      <div class="info">
        <h1>{SpaConfig.username}</h1>
        <p>{SpaConfig.sign}</p>
        <div class="social-links">
          {SpaConfig.socialLinks.map((item) => (
            <a href={item.link} target="_blank">
              <Icon name={item.icon} size={24} />
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
  <div class="footer-info">
    <div class="main-container">
      <div class="links">
        <CopyRight title={SpaConfig.title} published={new Date()} author={SpaConfig.username} />
      </div>
      <div>Â© {currentYear} {SpaConfig.username} All Rights Reserved.</div>
    </div>
  </div>
</footer>

<style>
  .link {
    @apply text-[var(--primary-color)] transition-all hover:brightness-110;
  }

  .category {
    font-family: var(--primary-font);
  }

  .category:hover > p {
    @apply pl-2 text-[var(--primary-color)];
  }

  .main-container {
    @apply w-full px-4 md:max-w-[90%] lg:max-w-[var(--page-width-lg)] xl:max-w-[var(--page-width-xl)] mx-auto py-8;
  }
  .user-info {
    @apply flex flex-col md:flex-row items-center text-center md:text-left gap-8 mb-8;
  }
  .avatar {
    @apply w-32 h-32 md:w-40 md:h-40 rounded-full overflow-hidden border-4 border-[var(--primary-color)];
    flex-shrink: 0;
  }
  .avatar-img {
    @apply w-full h-full object-cover;
  }
  .info {
    @apply flex-grow;
  }
  .info h1 {
    @apply text-3xl font-bold mb-2;
    font-family: 'Elsie', serif;
    color: var(--text-title-color);
  }
  .info p {
    @apply text-lg mb-4;
    font-family: 'Gilroy-LightItalic', sans-serif;
    color: var(--text-color);
  }
  .social-links {
    @apply flex justify-center md:justify-start gap-4;
  }
  .social-links a {
    @apply text-[var(--primary-color)] hover:opacity-75 transition-opacity;
  }

  .footer-info {
    @apply bg-[var(--card-color)] text-center py-4 mt-8 text-sm;
  }

  .footer-info .main-container {
    @apply flex flex-col md:flex-row justify-between items-center py-0;
  }

  .links {
    @apply flex flex-wrap justify-center gap-x-4 gap-y-2 mb-2 md:mb-0;
  }
  .links a {
    @apply hover:text-[var(--primary-color)];
  }
  .links .copy-right {
    display: none;
  }

  :root {
    --primary-color: #BFDCCA;
    --text-color: #868585;
    --text-title-color: #5a5a5a;
    --card-color: #F4F2E9;
    --background-color: #FFFFFF;
  }
  html.dark {
    /* Definir colores para modo oscuro si se implementa */
  }
</style>
